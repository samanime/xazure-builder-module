  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samanime/xazure-builder-module.git"
  },
  "bugs": {
    "url": "https://github.com/samanime/xazure-builder-module/issues"
  },
  "xazure": "builder",
  "scripts": {
    "prepare": "npm run clean & npm run build",
    "postpublish": "git push & git push --tags",
    "start": "npm run clean & npm run build -- -w",
    "clean": "rimraf dist",
    "build": "babel src -d dist -s",
    "run:build": "node -r babel-polyfill -r source-map-support/register -e \"const dir = require('path').join(process.cwd(), '..', `xazure-${process.argv[1]}`); require('./dist').default(dir);\""
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "source-map-support": "^0.5.2",
    "xazure-builder-common": "0.0.1"
  },
  "devDependencies": {
    "rimraf": "^2.6.2"
  }
}
